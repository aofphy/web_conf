# Production Environment Configuration
NODE_ENV=production

# Server Configuration
BACKEND_PORT=5000
FRONTEND_PORT=3000
FRONTEND_URL=https://conference.yourdomain.com

# Database Configuration (Use strong passwords in production)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=conference_db
DB_USER=conference_user
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Redis Configuration
REDIS_URL=redis://:CHANGE_THIS_PASSWORD@redis:6379
REDIS_PASSWORD=CHANGE_THIS_PASSWORD

# JWT Configuration (Use a strong secret)
JWT_SECRET=CHANGE_THIS_JWT_SECRET_TO_SOMETHING_VERY_SECURE
JWT_EXPIRES_IN=24h

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=anscse29@g.sut.ac.th
SMTP_PASS=CHANGE_THIS_EMAIL_PASSWORD
EMAIL_FROM=anscse29@g.sut.ac.th

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Payment Configuration
BANK_NAME=Your Bank Name
ACCOUNT_NAME=Conference Account
ACCOUNT_NUMBER=1234567890
SWIFT_CODE=BANKCODE123

# CDN Configuration
CDN_ENABLED=true
CDN_BASE_URL=https://cdn.yourdomain.com
CDN_ACCESS_KEY=your_cdn_access_key
CDN_SECRET_KEY=your_cdn_secret_key
CDN_BUCKET=conference-assets
CDN_REGION=us-east-1

# Performance Configuration
ENABLE_COMPRESSION=true
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600
CACHE_TTL_VERY_LONG=86400

# Monitoring
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem